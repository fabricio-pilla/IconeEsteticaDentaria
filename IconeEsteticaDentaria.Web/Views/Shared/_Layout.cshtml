<!DOCTYPE html>
<html>
<head>
    <title>Icone Estética Dentária</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="shortcut icon" type="image/x-png" href="/Images/icon.png">
    <link rel="icon" href="/Images/icon.ico" />
    <link rel="apple-touch-icon-precomposed" href="/Images/icon.ico" />

    @Styles.Render("~/Bundles/css")
    @Styles.Render("~/bundles/css/bootstrap")
    @Styles.Render("~/bundles/css/toastr")
    @Styles.Render("~/bundles/css/sweetalert")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="logoMenu">
                <a href="/Home">
                    <img src="~/Images/logomenuIcone.png" alt="Icone Estética Dentária" />
                </a>
            </div>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.RouteUrl("Default")"><span>Home</span></a></li>
                    <li><a href="@Url.RouteUrl("CadastrarOrdemServico")"><span>Cadastrar OS</span></a></li>
                    <li><a href="@Url.RouteUrl("ConsultarOrdemServico")"><span>Consulta OS</span></a></li>
                    <li><a href="@Url.RouteUrl("Sair")"><span>Sair</span></a></li>
                </ul>
            </div>
        </div>
    </div>
    <div id="MessageBoxJS">
    </div>
    <div class="container body-content">
        <div id="loader" class="loading display-none">Aguarde,por favor</div>
        @RenderBody()
    </div>


    @Scripts.Render("~/bundles/js/jquery")
    @Scripts.Render("~/bundles/js/bootstrap")
    @Scripts.Render("~/bundles/js/jquerymaskedinput")
    @Scripts.Render("~/bundles/js/toastr")
    @Scripts.Render("~/bundles/js/sweetalert")


    @Scripts.Render("~/bundles/js/geral")

    <script src="https://use.fontawesome.com/c49d613f0b.js"></script>
    <script>
        $(function () {
            Inicializador.Iniciar();
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
