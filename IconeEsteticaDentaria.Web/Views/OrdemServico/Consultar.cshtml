@{
    ViewBag.Title = "Consultar Ordem de Serviço";
}

<div class="container-fluid">
    <h2>Consultar Ordem de Serviço</h2>
    <div class="row">
        <form class="form-inline">
            <div class="form-group">
                <label for="txtNumeroOS">Número O.S.:</label>
                <input type="number" class="form-control" name="numeroOS" id="txtNumeroOS" placeholder="Número OS" maxlength="11" min="0">
            </div>
            <div class="form-group">
                <label for="txtNomePaciente">Nome Paciente:</label>
                <input type="text" class="form-control" id="txtNomePaciente" name="nomePaciente" placeholder="Nome Paciente" maxlength="200">
            </div>
            <button id="btnPesquisar" type="button" class="btn btn-primary">Pesquisar</button>
        </form>
        <div class="col-lg-12">
            <div class="form-group">
                <table id="tableOrdemServico" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Número O.S.</th>
                            <th>Nome Paciente</th>
                            <th>CPF Paciente</th>
                            <th>Data Entrada</th>
                            <th>Situação</th>
                            <th>Pode Editar</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" rel="stylesheet" />

    <script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js" type="text/javascript"></script>
    @Scripts.Render("~/bundles/js/ConsultarOrdemServico")

    <script type="text/javascript">
        $(function () {
            ConsultarOrdemServico.Iniciar();
        });
    </script>
}