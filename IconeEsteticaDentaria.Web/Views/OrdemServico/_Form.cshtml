@model string

<div class="row">
    <p><small>* Campos Obrigatórios</small></p>
    <form id="frmServico">
        <div class="col-lg-6">
            <div class="form-group">
                <label for="txtNumeroOS">Número da O.S.:</label>
                <input type="text" id="txtNumeroOS" class="form-control" placeholder="Número do Ordem de Serviço" disabled value="@Model" />
            </div>
        </div>

        <div class="col-lg-6">
            <div class="form-group">
                <label for="txtDataEntrada">Data da Entrada:</label>
                <input type="text" id="txtDataEntrada" class="form-control maskData" placeholder="Data da Entrada" disabled />
            </div>
        </div>

        <div class="col-md-12">
            <label for="ddlCliente">Cliente:</label>
        </div>

        <div class="col-md-2">
            <div class="form-group">
                <input type="text" id="txtIdCliente" class="form-control" placeholder="Código" disabled />
            </div>
        </div>

        <div class="col-md-10">
            <div class="form-group">
                <input type="text" id="txtNomeCliente" class="form-control" placeholder="Cliente Nome" disabled />
            </div>
        </div>

        <div class="col-lg-4">
            <div class="form-group">
                <label for="txtCpfPaciente">CPF do paciente: *</label>
                <input type="text" id="txtCpfPaciente" class="form-control maskCpf" placeholder="CPF do paciente" maxlength="14" />
            </div>
        </div>

        <div class="col-lg-8">
            <div class="form-group">
                <label for="txtNomePaciente">Nome do Paciente: *</label>
                <input type="text" id="txtNomePaciente" class="form-control" placeholder="Nome do paciente" maxlength="200" />
            </div>
        </div>

        <div class="col-lg-12">
            <div class="form-group">
                <label for="txtObservacaoOS">Observação da O.S.:</label>
                <textarea id="txtObservacaoOS" class="form-control" rows="5" maxlength="2000"></textarea>
                <span id="contadorObservacaoOS">2000</span> caractere(s) restante(s)
            </div>
        </div>

        <div class="col-lg-12">
            <fieldset>
                <legend>Itens da Ordem de Serviço</legend>
                <input id="hdnItemOSId" type="hidden" value="0" />
                <input id="hdnIndex" type="hidden" value="0" />
                <div class="col-md-8">
                    <div class="form-group">
                        <label for="ddlServicos">Serviços: *</label>
                        <select id="ddlServicos" class="form-control chosen-select" data-placeholder="-- Selecione --">
                            <option value=""></option>
                        </select>
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="form-group">
                        <label for="txtQuantidade">Quantidade: *</label>
                        <input type="number" id="txtQuantidade" class="form-control" placeholder="Quantidade" maxlength="100" min="0" />
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="form-group">
                        <label></label>
                        <button id="btnAdicionarItensOS" type="button" class="btn form-control btn-success margin-top-5">Adicionar</button>
                    </div>
                </div>


                <div class="col-lg-12">
                    <div class="form-group">
                        <table id="tableItensOS" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Serviço</th>
                                    <th>Quantidade</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>

            </fieldset>
        </div>
    </form>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <button id="btnSalvar" type="button" class="btn btn-primary">Salvar</button>
            <button id="btnCancelar" type="button" class="btn btn-default display-none">Cancelar</button>
        </div>
    </div>
</div>